<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbacground_900"
    tools:context=".ShowAuthActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/_25ssp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/arrow_left"
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/back_auth"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsbold"
        android:textSize="@dimen/_30ssp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sing in or creat a new account"
        android:gravity="center"
        android:textColor="@color/gray_600"
        android:layout_marginBottom="@dimen/_40sdp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="300sp"
        android:layout_height="@dimen/_200sdp"
        android:backgroundTint="@color/colorbacground_900"
        app:lottie_rawRes="@raw/floating"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:text="Login"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/_10sdp"
        android:backgroundTint="@color/colorhighlight"
        android:id="@+id/btn_login"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:text="No account yet? Sing up"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppinsmedium"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:textColor="@color/colorhighlight"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/btn_sign_up"
        app:cornerRadius="@dimen/_10sdp" />
</LinearLayout>
</RelativeLayout>